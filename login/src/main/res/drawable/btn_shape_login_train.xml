<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 圆角 -->
    <corners
        android:radius="8dp"
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"/><!-- 设置圆角半径 -->
    <!-- 间隔 -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/><!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="30dp"
        android:height="25dp"/><!-- 宽度和高度 -->

    <solid
        android:color="@color/trans"/>

    <!-- 描边，边框 -->
   <stroke
        android:width="1dp"
        android:color="@color/white"
        />

</shape>


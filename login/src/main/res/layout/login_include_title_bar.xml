<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/include_top_lin_back"
    android:background="@color/trans"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/include_top_margin10"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/include_top_lin_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        >
        <!--<RelativeLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->
        <!--<ImageView-->
        <!--android:id="@+id/include_top_iv_back"-->
        <!--android:layout_width="@dimen/dp40"-->
        <!--android:layout_height="@dimen/dp40"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:padding="@dimen/dp10"-->
        <!--android:clickable="false"-->
        <!--android:adjustViewBounds="true"-->
        <!--app:srcCompat="@drawable/to_left"-->
        <!--android:focusable="false"-->
        <!--/>-->
        <LinearLayout
            android:id="@+id/include_top_lin_newback"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            >
            <ImageView
                android:id="@+id/include_top_iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:clickable="false"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/to_left"
                android:focusable="false"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/include_top_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="标题"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/include_top_lin_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/include_top_lin_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp10"
                android:layout_gravity="right">

            <TextView
                android:id="@+id/include_top_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_add_skip"
                android:textSize="@dimen/sp18"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp1"
                android:background="@color/white"
                android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>